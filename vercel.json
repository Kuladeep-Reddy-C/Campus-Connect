{
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://your-backend.onrender.com/api/:path*"
        },
        {
            "source": "/res/:path*",
            "destination": "https://your-backend.onrender.com/res/:path*"
        },
        {
            "source": "/user-info/:path*",
            "destination": "https://your-backend.onrender.com/user-info/:path*"
        },
        {
            "source": "/(.*)",
            "destination": "/"
        }
    ]
}